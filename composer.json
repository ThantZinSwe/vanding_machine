{
    "name": "tzs/vending-machine",
    "description": "Vending Machine",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "firebase/php-jwt": "^6.11"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/"
        },
         "files": [
            "core/functions.php",
            "helpers.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    }
}
